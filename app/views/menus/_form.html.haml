= form_for @menu do |f|
  - if @menu.errors.any?
    #error_explanation
      %h2= "#{pluralize(@menu.errors.count, "error")} prohibited this menu from being saved:"
      %ul
        - @menu.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :pagina_id
    = f.number_field :pagina_id
  .field
    = f.label :titulo
    = f.text_field :titulo
  .field
    = f.label :estado
    = f.check_box :estado
  .field
    = f.label :created_at
    = f.datetime_select :created_at
  .field
    = f.label :modiied_at
    = f.datetime_select :modiied_at
  .actions
    = f.submit 'Save'
