= form_for @pagina do |f|
  - if @pagina.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pagina.errors.count, "error")} prohibited this pagina from being saved:"
      %ul
        - @pagina.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :titulo
    = f.text_field :titulo
  .field
    = f.label :contenido
    = f.text_area :contenido
  .field
    = f.label :created_at
    = f.datetime_select :created_at
  .field
    = f.label :modified_at
    = f.datetime_select :modified_at
  .actions
    = f.submit 'Save'
